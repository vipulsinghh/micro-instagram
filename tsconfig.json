{
  "compilerOptions": {
    "target": "ES6", // Compiles TypeScript code to ES6 JavaScript.
    "module": "commonjs", // Uses CommonJS module system for imports/exports.
    "rootDir": "./src", // Specifies the source directory.
    "outDir": "./dist", // Specifies the output directory for compiled code.
    "strict": true, // Enforces strict type-checking rules.
    "esModuleInterop": true, // Ensures compatibility with CommonJS modules like `require`.
    "skipLibCheck": true // Skips type-checking for third-party libraries.
  }
}
